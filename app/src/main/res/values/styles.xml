<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.DayNight.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <declare-styleable name="PasswordEditText">
        <attr name="useStrike" format="boolean" />
        <attr name="useValidate" format="boolean" />
    </declare-styleable>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <!--Avatar-->
    <style name="imv_circle_avatar">
        <item name="civ_border">true</item>
        <item name="civ_border_width">0.5dp</item>
        <!--<item name="android:background">@color/transparent</item>-->
        <item name="civ_border_color">@color/bg_graylight</item>
        <item name="civ_shadow">false</item>
        <item name="android:layout_width">@dimen/width_height_avatar</item>
        <item name="android:layout_height">@dimen/width_height_avatar</item>
        <item name="android:src">@drawable/avatar_default</item>
        <item name="android:scaleType">centerCrop</item>
    </style>

    <style name="txt_normal_dark">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">@dimen/txt_normal</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/dark_text</item>
    </style>

    <style name="txt_large_dark">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">@dimen/txt_large</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/dark_text</item>
    </style>

    <style name="txt_normal_red">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">@dimen/txt_normal</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/red</item>
    </style>

    <style name="txt_normal_dark_bg_graylight">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">@dimen/txt_normal</item>
        <item name="android:textStyle">normal</item>
        <item name="android:paddingLeft">18dp</item>
        <item name="android:paddingRight">18dp</item>
        <item name="android:paddingTop">15dp</item>
        <item name="android:paddingBottom">15dp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/dark_text</item>
        <item name="android:background">@color/bg_graylight</item>
    </style>


    <!--Button-->
    <style name="btn_green">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/height_btn</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:background">@drawable/bg_btn_green</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/white</item>
    </style>
</resources>
